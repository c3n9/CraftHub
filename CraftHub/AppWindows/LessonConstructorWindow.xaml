<Window x:Class="CraftHub.AppWindows.LessonConstructorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CraftHub.AppWindows"
        mc:Ignorable="d"
        Title="LessonConstructorWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="BAddImage"
                    Content="Add image" 
                    Click="BAddImage_Click"/>
            <Button x:Name="BAddTextBox"
                    Content="Add text box"
                    Click="BAddTextBox_Click" />
        </StackPanel>
        <Canvas x:Name="CWorkingArea"
                Grid.Row="1">
            <Image x:Name="IDragging"
                   Source="/Recourses/openfile.png"
                   Width="100"
                   Height="100"
                   MouseLeftButtonDown="IDragging_MouseLeftButtonDown"
                   MouseLeftButtonUp="IDragging_MouseLeftButtonUp"
                   MouseMove="IDragging_MouseMove" />
        </Canvas>
        

    </Grid>
</Window>
