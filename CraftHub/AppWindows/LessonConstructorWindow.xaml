<Window x:Class="CraftHub.AppWindows.LessonConstructorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CraftHub.AppWindows"
        mc:Ignorable="d"
        Title="LessonConstructorWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Canvas x:Name="CWorkingArea" />
        <StackPanel Grid.Column="1">
            <Button x:Name="BClear"
                    Content="Clear"
                    Click="BClear_Click"
                    Margin="0,10,0,0"/>
            <Button x:Name="BAddImage"
                    Content="Add image" 
                    Click="BAddImage_Click"
                    Margin="0,10"/>
            <Button x:Name="BAddTextBox"
                    Content="Add text box"
                    Click="BAddTextBox_Click" />
            <TextBox x:Name="TBLabel"
                     Height="100" 
                     Width="200"
                     TextWrapping="Wrap"
                     Margin="10"/>
        </StackPanel>


    </Grid>
</Window>
