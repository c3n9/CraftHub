<Page x:Class="JsonConverter.Pages.JsonPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JsonConverter.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="JsonPage"
      Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="10"
                    HorizontalAlignment="Left"
                    Orientation="Horizontal"
                    Grid.ColumnSpan="2">
            <Button x:Name="BAdd"
                    Click="BAdd_Click"
                    Content="Add" />
            <Button x:Name="BEdit"
                    Click="BEdit_Click"
                    Content="Edit" />
        </StackPanel>
        <DataGrid x:Name="DGJsonData" 
                  ColumnWidth="*"
                  Grid.ColumnSpan="2"
                  Grid.Row="1"
                  RowEditEnding="DGJsonData_RowEditEnding"
                  IsReadOnly="True"
                  SelectionChanged="DGJsonData_SelectionChanged"
                  CanUserAddRows="False"/>
        <ScrollViewer Grid.Row="1"
                      Grid.Column="1">
            <TextBlock x:Name="TBJson"
                       Visibility="Collapsed"/>
        </ScrollViewer>
        <Button x:Name="BBack"
                Content="Back"
                Click="BBack_Click" 
                Grid.Row="2"
                Margin="10"
                HorizontalAlignment="Left"
                Grid.ColumnSpan="2"/>
    </Grid>
</Page>
