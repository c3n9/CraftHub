<Page x:Class="JsonConverter.Pages.PropertiesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JsonConverter.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PropertiesPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal"
                    Margin="10">
            <TextBlock Text="Property name" 
                       VerticalAlignment="Center"
                       Margin="10,0"/>
            <TextBox x:Name="TBPropertyName"
                     Width="100" />
            <TextBlock Text="Type value"
                       VerticalAlignment="Center"
                       Margin="10,0"/>
            <ComboBox x:Name="CBValues" 
                      Width="100"/>
            <Button x:Name="BAddProperty"
                    Content="Add"
                    Click="BAddProperty_Click" 
                    Margin="10,0"/>
            <Button x:Name="BRemovePropery"
                    Click="BRemovePropery_Click"
                    Content="Remove" />
        </StackPanel>
        <DataGrid x:Name="DGProperties"
                  IsReadOnly="True" 
                  Grid.Row="1"
                  ColumnWidth="*"/>
        <Button x:Name="BNext"
                Click="BNext_Click"
                Content="Next"
                Grid.Row="2"
                HorizontalAlignment="Right"
                Margin="10" />
    </Grid>
</Page>
